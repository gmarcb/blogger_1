<div>

<p>
  <strong>Title:</strong>
  <%= @blog_post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @blog_post.user.username %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @blog_post.blog_entry %>
</p>
	
<div>
	<%= render 'comments/form' %>
</div>

<div class="panel panel-default">
	<div class="panel-header">
	<h4>Comments</h4>
	</div>

	<% @blog_post.comments.each do |comment| %>
	<div class="panel-body">
	<p> On <%= comment.created_at.strftime('%m/%d/%Y at %I:%M%p') %></p>
	<p><strong><%= comment.user.username %></strong> said:</p>
	<p><%= comment.comment_entry %></p>
	</div>
	
	<% end %>
	</div>

</div>

<div>
<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> 
</div>

<div>
<%= link_to 'Back', blog_posts_path %>
</div>



